<script>
  const API_URL =
    "https://script.google.com/macros/s/AKfycbxTcYJqSyQT9KRtiLRaY3JGlcBG8tmxMkmni5r17HprE8qAY0Bf8CtBUCc2ICDOBWyb5A/exec";

  function getQueryParam(name) {
    return new URLSearchParams(window.location.search).get(name);
  }

  const teklifNo = (getQueryParam("teklifNo") || "").trim();

  async function fetchJSON(url) {
    const res = await fetch(url);
    const text = await res.text();
    return JSON.parse(text);
  }

  async function loadTeklif() {
    if (!teklifNo) return;

    try {
      const data = await fetchJSON(
        API_URL + "?action=teklif&teklifNo=" + encodeURIComponent(teklifNo)
      );

      if (data.error) return;

      document.getElementById("teklifNo").textContent = data.teklifNo || "-";
      document.getElementById("tarih").textContent = data.tarih || "-";
      document.getElementById("musteri").textContent = data.musteriAdi || "-";
      document.getElementById("telefon").textContent = data.telefon || "-";
      document.getElementById("montaj").textContent = data.montajYeri || "-";

    } catch (e) {
      console.error("Teklif yüklenemedi:", e);
    }
  }

  async function loadSelect(action, selectId) {
    try {
      const list = await fetchJSON(API_URL + "?action=" + action);
      const select = document.getElementById(selectId);

      select.innerHTML = '<option value="">Seçiniz</option>';

      list.forEach(item => {
        const opt = document.createElement("option");
        opt.value = item;
        opt.textContent = item;
        select.appendChild(opt);
      });
    } catch (e) {
      console.error(action + " yüklenemedi:", e);
    }
  }

  loadTeklif();
  loadSelect("sistemler", "sistemSelect");
  loadSelect("aluminyum", "aluminyumSelect");
  loadSelect("cam", "camSelect");
  loadSelect("extra", "extraSelect");
</script>

